<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/welcome"
                android:textColor="@color/main_blue_color"
                android:textSize="50sp"
                android:fontFamily="@font/login"
                android:paddingTop="8dp"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="@string/sereem_account"
                android:textColor="@color/main_blue_color"
                android:textSize="30sp"
                android:fontFamily="@font/login" />

            <TextView
                android:id="@+id/incorrectTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textColor="#CF2E2B"
                android:textStyle="bold|italic" />

            <EditText
                android:id="@+id/emailLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:padding="3dp"
                android:background="@drawable/rounded_corners_edit_text"
                android:layout_gravity="center"
                style="@style/Widget.AppCompat.EditText"
                android:textStyle="bold"
                android:textColor="@color/main_blue_color"

                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textSize="24sp"
                android:drawableStart="@drawable/ic_email_blue"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingTop="16dp">

                <EditText
                    android:id="@+id/passwordLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:padding="3dp"
                    android:background="@drawable/rounded_corners_edit_text"
                    style="@style/Widget.AppCompat.EditText"
                    android:ems="10"
                    android:textColor="@color/main_blue_color"
                    android:textStyle="bold"
                    android:hint="@string/password"
                    android:inputType="textPassword"
                    android:textSize="24sp"
                    android:drawableLeft="@drawable/ic_lock_blue"/>

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:paddingTop="10dp"
                    android:paddingEnd="5dp"
                    android:text="@string/forgot_your_password"
                    android:textColor="@color/main_blue_color"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/login" />
            </LinearLayout>

            <Button
                android:id="@+id/signInButtonLogin"
                android:layout_width="274dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/main_blue_color"
                android:text="@string/sing_in"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingTop="16sp"
                android:text="@string/create_an_account"
                android:textColor="@color/main_blue_color"
                android:textSize="25sp"
                android:textStyle="bold"
                android:fontFamily="@font/login" />

            <Button
                android:id="@+id/signUpButtonLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="@string/sign_up"
                android:backgroundTint="@color/main_blue_color"
                android:textStyle="bold"
                android:textSize="18sp"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>